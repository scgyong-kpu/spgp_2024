<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="@dimen/page_button_size"
            android:layout_height="@dimen/page_button_size"
            android:background="@mipmap/prev"
            android:onClick="onBtnPrevious"
            />

        <TextView
            android:id="@+id/pageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="1 / 6"
            android:textSize="30sp"
            />
        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="@dimen/page_button_size"
            android:layout_height="@dimen/page_button_size"
            android:background="@mipmap/next"
            android:onClick="onBtnNext"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/mainImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/cat_5"
        />
</LinearLayout>